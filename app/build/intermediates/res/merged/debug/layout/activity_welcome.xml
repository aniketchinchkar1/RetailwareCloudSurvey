<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainscreenbg"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imgWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.01"
        android:gravity="center_horizontal"
        android:src="@drawable/wellogo" />

    <TextView
        android:id="@+id/tvWelcomeMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="0.01"
        android:gravity="center_horizontal"
        android:text="Welcome"
        android:textColor="@color/white"
        android:textSize="25dp" />

</LinearLayout><!-- From: file:/home/learn-android/Studio_Project/RetailwareCloudSurvey/app/src/main/res/layout/activity_welcome.xml -->